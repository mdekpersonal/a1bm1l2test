---
export interface Props {
	title: string;
	description?: string;
}

const { title, description = "Learn French A1 - General French for Adults" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<style>
			/* CSS Variables for consistent theming */
			:root {
				--color-primary: #2563eb;
				--color-primary-light: #3b82f6;
				--color-secondary: #f1f5f9;
				--color-accent: #10b981;
				--color-text: #1f2937;
				--color-text-light: #6b7280;
				--color-border: #e5e7eb;
				--color-bg: #ffffff;
				--font-family: 'Inter', system-ui, -apple-system, sans-serif;
				--border-radius: 8px;
				--shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
				--shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
			}

			/* Reset and base styles */
			* {
				box-sizing: border-box;
				margin: 0;
				padding: 0;
			}

			body {
				font-family: var(--font-family);
				line-height: 1.6;
				color: var(--color-text);
				background-color: var(--color-bg);
			}

			/* Layout styles */
			.container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 1rem;
			}

			/* Header styles */
			header {
				background: var(--color-bg);
				border-bottom: 1px solid var(--color-border);
				position: sticky;
				top: 0;
				z-index: 100;
				box-shadow: var(--shadow);
			}

			.header-content {
				display: flex;
				justify-content: space-between;
				align-items: center;
				padding: 1rem 0;
			}

			.logo {
				font-size: 1.5rem;
				font-weight: 700;
				color: var(--color-primary);
				text-decoration: none;
			}

			/* Navigation styles */
			nav ul {
				display: flex;
				list-style: none;
				gap: 2rem;
			}

			nav a {
				text-decoration: none;
				color: var(--color-text);
				font-weight: 500;
				transition: color 0.2s;
				padding: 0.5rem 1rem;
				border-radius: var(--border-radius);
			}

			nav a:hover,
			nav a.active {
				color: var(--color-primary);
				background-color: var(--color-secondary);
			}

			/* Main content styles */
			main {
				min-height: calc(100vh - 140px);
				padding: 2rem 0;
			}

			/* Footer styles */
			footer {
				background: var(--color-secondary);
				text-align: center;
				padding: 2rem 0;
				color: var(--color-text-light);
				border-top: 1px solid var(--color-border);
			}

			/* Utility classes */
			.btn {
				display: inline-block;
				background: var(--color-primary);
				color: white;
				padding: 0.75rem 1.5rem;
				text-decoration: none;
				border-radius: var(--border-radius);
				font-weight: 500;
				transition: background-color 0.2s;
				border: none;
				cursor: pointer;
			}

			.btn:hover {
				background: var(--color-primary-light);
			}

			.btn-secondary {
				background: var(--color-secondary);
				color: var(--color-text);
			}

			.btn-secondary:hover {
				background: var(--color-border);
			}

			/* Responsive design */
			@media (max-width: 768px) {
				.header-content {
					flex-direction: column;
					gap: 1rem;
					align-items: flex-start;
				}

				nav ul {
					flex-direction: column;
					gap: 0.5rem;
					width: 100%;
					padding-left: 0;
				}

				nav a {
					padding: 0.75rem 1rem;
					width: 100%;
					text-align: left;
				}

				.container {
					padding: 0 0.5rem;
				}

				main {
					padding: 1rem 0;
				}

				.lesson-card {
					padding: 1rem;
					font-size: 0.95rem;
				}

				.lesson-nav {
					flex-direction: column !important;
					gap: 1rem !important;
					align-items: stretch !important;
					text-align: center !important;
				}

				.btn, .btn-secondary {
					width: 100%;
					font-size: 1rem;
					padding: 0.75rem 1rem;
				}
			}
		</style>
	</head>
	<body>
		<header>
			<div class="container">
				<div class="header-content">
					<a href="/" class="logo">ðŸ‡«ðŸ‡· French A1 Course</a>
					<nav id="main-nav">
						<ul>
							<li><a href="/">Home</a></li>
							<li><a href="/lesson1">Lesson 1</a></li>
							<li><a href="/lesson2">Lesson 2</a></li>
							<li><a href="/lesson3">Lesson 3</a></li>
							<li><a href="/lesson4">Lesson 4</a></li>
							<li><a href="/login" id="login-nav-link">Connexion</a></li>
						</ul>
					</nav>
				</div>
			</div>
		</header>

		<main>
			<div class="container">
				<slot />
			</div>
		</main>

		<footer>
			<div class="container">
				<p>&copy; 2025 French A1 Course. Learn French step by step! ðŸš€</p>
			</div>
		</footer>

		<!-- Navigation authentication check -->
		<script>
			// Hide navigation initially to prevent flash
			const mainNav = document.getElementById('main-nav');
			if (mainNav) {
				mainNav.style.visibility = 'hidden';
			}
			
			// Check authentication and show appropriate navigation
			(function() {
				const loggedIn = localStorage.getItem('loggedIn');
				const loginLink = document.getElementById('login-nav-link');
				
				if (loggedIn === 'true') {
					// User is logged in, show navigation without login link
					if (loginLink) {
						loginLink.style.display = 'none';
					}
				} else {
					// User is not logged in, show login link only
					if (loginLink) {
						loginLink.style.display = 'block';
					}
				}
				
				// Show navigation after authentication check
				if (mainNav) {
					mainNav.style.visibility = 'visible';
				}
			})();
		</script>
	</body>
</html>
