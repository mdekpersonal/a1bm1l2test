<style>
	@keyframes spin {
		0% { transform: rotate(0deg); }
		100% { transform: rotate(360deg); }
	}

	/* Base lesson styles (inherited) */
	.lesson-header {
		text-align: center;
		margin-bottom: 3rem;
		padding-bottom: 2rem;
		border-bottom: 2px solid var(--color-border);
	}

	.lesson-nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 2rem;
	}

	.lesson-progress {
		background: var(--color-accent);
		color: white;
		padding: 0.5rem 1rem;
		border-radius: var(--border-radius);
		font-weight: 500;
	}

	.lesson-header h1 {
		font-size: 2.5rem;
		color: var(--color-primary);
		margin-bottom: 0.5rem;
	}

	.lesson-subtitle {
		font-size: 1.25rem;
		color: var(--color-text-light);
	}

	.lesson-content section {
		margin-bottom: 3rem;
		background: white;
		padding: 2rem;
		border-radius: var(--border-radius);
		box-shadow: var(--shadow);
	}

	section h2 {
		color: var(--color-primary);
		margin-bottom: 1.5rem;
		font-size: 1.5rem;
	}

	.objectives ul {
		list-style: none;
		padding: 0;
	}

	.objectives li {
		background: var(--color-secondary);
		padding: 1rem;
		margin-bottom: 0.5rem;
		border-radius: var(--border-radius);
		border-left: 4px solid var(--color-accent);
	}

	/* Direction-specific styles */
	.direction-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 1rem;
	}

	.direction-item {
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 1.5rem;
		background: var(--color-secondary);
		border-radius: var(--border-radius);
		text-align: center;
		transition: transform 0.2s;
	}

	.direction-item:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow);
	}

	.direction-item .icon {
		font-size: 2rem;
		margin-bottom: 0.5rem;
	}

	.french {
		font-weight: 700;
		color: var(--color-primary);
		font-size: 1.1rem;
		margin-bottom: 0.25rem;
	}

	.pronunciation {
		font-style: italic;
		color: var(--color-text-light);
		font-family: monospace;
		font-size: 0.9rem;
		margin-bottom: 0.25rem;
	}

	.english {
		color: var(--color-text);
		font-size: 0.9rem;
	}

	.vocab-grid {
		display: grid;
		gap: 1rem;
	}

	.vocab-item {
		display: grid;
		grid-template-columns: 1fr 1fr 1fr;
		gap: 1rem;
		padding: 1rem;
		background: var(--color-secondary);
		border-radius: var(--border-radius);
		align-items: center;
	}

	/* Transport styles */
	.transport-category,
	.landmark-category,
	.phrases-section {
		margin-bottom: 2rem;
	}

	.transport-category h3,
	.landmark-category h3,
	.phrases-section h3 {
		color: var(--color-primary);
		margin-bottom: 1rem;
		font-size: 1.25rem;
	}

	.transport-grid,
	.landmark-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
		gap: 1rem;
	}

	.transport-item,
	.landmark-item {
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 1rem;
		background: var(--color-secondary);
		border-radius: var(--border-radius);
		text-align: center;
		transition: transform 0.2s;
	}

	.transport-item:hover,
	.landmark-item:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow);
	}

	.transport-item .icon,
	.landmark-item .icon {
		font-size: 2rem;
		margin-bottom: 0.5rem;
	}

	/* Map styles */
	.city-map h3 {
		text-align: center;
		color: var(--color-primary);
		margin-bottom: 1.5rem;
	}

	.map-container {
		background: var(--color-secondary);
		padding: 2rem;
		border-radius: var(--border-radius);
		overflow-x: auto;
	}

	.map-grid {
		display: grid;
		grid-template-columns: repeat(5, 120px);
		grid-template-rows: repeat(5, 80px);
		gap: 2px;
		justify-content: center;
		min-width: 620px;
	}

	.map-location {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
